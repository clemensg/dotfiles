ZSH=$HOME/.oh-my-zsh
ZSH_THEME="robbyrussell"
# Set to this to use case-sensitive completion
# CASE_SENSITIVE="true"
# Uncomment to change how often before auto-updates occur? (in days)
export UPDATE_ZSH_DAYS=6
# Uncomment following line if you want to disable command autocorrection
# DISABLE_CORRECTION="true"
# Uncomment following line if you want to disable marking untracked files under
# VCS as dirty. This makes repository status check for large repositories much,
# much faster.
# DISABLE_UNTRACKED_FILES_DIRTY="true"
# Uncomment following line if you want to  shown in the command execution time stamp 
# in the history command output. The optional three formats: "mm/dd/yyyy"|"dd.mm.yyyy"|
# yyyy-mm-dd
HIST_STAMPS="dd.mm.yyyy"

# Configure the tmux plugin in oh-my-zsh
ZSH_TMUX_AUTOSTART=false
ZSH_TMUX_ITERM2=false

DOTFILES=$HOME/dotfiles

# Which platform-independent plugins would you like to load?
# Platform-dependent plugins are defined below
plugins=(git svn-fast-info tmux bundler)

# Load platform-specific configurations (and oh-my-zsh plugins!)
source $DOTFILES/zsh/os.zsh

# Add zsh-syntax-highlighting last
plugins+=(zsh-syntax-highlighting)
ZSH_HIGHLIGHT_HIGHLIGHTERS=(main brackets pattern cursor)
# Remove duplicate plugins
typeset -U plugins

# Load oh-my-zsh
source $ZSH/oh-my-zsh.sh

# Set necessary env vars for Cocoapods and Homebrew
export LC_CTYPE="en_US.UTF-8"
export MANPATH="/usr/local/man:/usr/local/share/man:/usr/man:/usr/share/man:$MANPATH"
export PATH="/usr/local/bin:/usr/local/sbin:$PATH"

# RVM
if [[ -d "$HOME/.rvm" ]]; then
  PATH=$PATH:$HOME/.rvm/bin
fi

# Set $EMACS variable to launch emacsclient with a daemon
source $DOTFILES/zsh/emacsclient.zsh
 
# Aliases
alias e=$EMACS
alias v=$VIM
alias dr="$DOTFILES/scripts/daily_routine.sh"

# Reminders if not using the shorthand alias
alias emacs='echo "Hey, why not type e instead of emacs?"; $EMACS'
alias vim='echo "Hey, why not type v instead of vim?"; $VIM'

# Default editor
export EDITOR=$VIM

# Use FredKSchott's color git log from fredkschott.com/post/2014/02/git-log-is-so-2005/
git config --global alias.lg "log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit"

# Haskell platform
export PATH=$HOME/Library/Haskell/bin:$PATH

# Remove duplicates from PATH, etc.
typeset -U PATH
typeset -U MANPATH

## direnv (adds ./bin/ dir to PATH, e.g. in rails project dirs)
eval "$(direnv hook zsh)"
