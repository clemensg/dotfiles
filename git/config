# .gitconfig
# Clemens Gruber, 2015
#

[alias]
  aa = add --all
  amend = commit --amend
  b = branch
  ci = commit -s --verbose
  co = checkout
  cp = cherry-pick
  dc = diff --cached
  dh = diff HEAD
  dh1 = diff HEAD~1
  di = diff
  fa = fetch --all
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  mergeff = merge --ff-only
  mergenoff = merge --no-ff
  pom = push origin master
  pullff = pull --ff-only
  st = status
  # Goodness (summary of diff lines added/removed/total)
  gn = !~/bin/git-goodness
  gnc = !~/bin/git-goodness --cached
[core]
  excludesfile = ~/.gitignore
  editor = vim
[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
[diff]
  #algorithm = patience
[diff "gpg"]
  #textconv = decrypt
  textconv = gpg2 -qd --no-tty  
[diff "keyring"]
  textconv = gpg2 -v
  xfuncname = "^((pub|uid) .*)"
[diff "tar"]
  textconv = tar -tvf
[grep]
  extendedregexp = true
#[help]
#  autocorrect = 30
#  format = web
[hub]
  protocol = https
#[rebase]
#  autosquash = true
[log]
  decorate = short
[push]
  default = simple
  # simple will soon be the default mechanism (in Git 2.0)
[user]
  name = Clemens Gruber
  email = clemensgru@gmail.com
[web]
  browser = open
