# .gitconfig
# Clemens Gruber, 2014
#

[alias]
  aa = add --all
  amend = commit --amend
  b = branch
  ci = commit -s --verbose
  co = checkout
  cp = cherry-pick
  dc = diff --cached
  dh = diff HEAD
  dh1 = diff HEAD~1
  di = diff
  fa = fetch --all
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  mergeff = merge --ff-only
  mergenoff = merge --no-ff
  pom = push origin master
  pullff = pull --ff-only
  st = status
  # Goodness (summary of diff lines added/removed/total)
  gn = !~/bin/git-goodness
  gnc = !~/bin/git-goodness --cached
  # Fancy logging.
  #  h = head
  #  hp = head with patch
  #  r = recent commits, only current branch
  #  ra = recent commits, all reachable refs
  #  l = all commits, only current branch
  #  la = all commits, all reachable refs
  head = !git l -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all
[core]
  excludesfile = ~/.gitignore
  #editor = vim
[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
[credential]
  helper = osxkeychain
[diff]
  #algorithm = patience
[diff "gpg"]
  #textconv = decrypt
  textconv = gpg2 -qd --no-tty  
[diff "keyring"]
  textconv = gpg2 -v
  xfuncname = "^((pub|uid) .*)"
[diff "tar"]
  textconv = tar -tvf
[grep]
  extendedregexp = true
#[help]
#  autocorrect = 30
#  format = web
[hub]
  protocol = https
#[rebase]
#  autosquash = true
[log]
  decorate = short
[push]
  default = simple
  # simple will soon be the default mechanism (in Git 2.0)
[user]
  name = Clemens Gruber
	email = clemens.gruber@pqgruber.com
[web]
  browser = open
